{
    "openapi": "3.0.0",
    "info": {
        "version": "{version-number}",
        "title": "{api-title}",
        "description": "{api-description}",
        "contact": {}
    },
    "servers": [
        {
            "url": "https://{accountName}.{environment}.com.br",
            "description": "VTEX server URL.",
            "variables": {
                "accountName": {
                    "default": "apiexamples",
                    "description": "Your VTEX account name."
                },
                "environment": {
                    "description": "Description of environment used in API.",
                    "default": "vtexcommercestable"
                }
            }
        }
    ],
    "paths": {
        "{path}": {
            "get": {
                "summary": "{method-summary}",
                "operationId": "listPets",
                "description": "{method-description}",
                "tags": [
                    "Category that will render on Developer Portal"
                ],
                "parameters": [
                    {
                        "name": "Content-Type",
                        "in": "header",
                        "description": "Describes the type of the content being sent.",
                        "required": true,
                        "style": "simple",
                        "schema": {
                            "type": "string",
                            "default": "application/json"
                        }
                    },
                    {
                        "name": "Accept",
                        "in": "header",
                        "description": "HTTP Client Negotiation _Accept_ Header. Indicates the types of responses the client can understand.",
                        "required": true,
                        "style": "simple",
                        "schema": {
                            "type": "string",
                            "default": "application/json"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "How many items to return at one time (max 100).",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 50
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A paged array of pets.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Pets"
                                }
                            }
                        }
                    }
                },
                "deprecated": false
            },
            "post": {
                "summary": "Create a pet",
                "operationId": "createPets",
                "description": "Describe the purpose of this path and who should use it",
                "tags": [
                    "pets"
                ],
                "requestBody": {
                    "description": "In the requestBody will be informed of the data for insertion of new pets in the adoption list. This data must be sent in JSON format.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "color",
                                    "breed",
                                    "carry",
                                    "age",
                                    "vaccinated"
                                ],
                                "properties": {
                                    "color": {
                                        "type": "string",
                                        "title": "color",
                                        "description": "Animal color.",
                                        "example": "Brown"
                                    },
                                    "breed": {
                                        "type": "string",
                                        "title": "breed",
                                        "description": "Animal breed.",
                                        "example": "Golden retriever"
                                    },
                                    "carry": {
                                        "type": "string",
                                        "title": "carry",
                                        "description": "Animal carry.",
                                        "example": "Large"
                                    },
                                    "age": {
                                        "type": "integer",
                                        "title": "age",
                                        "description": "Animal age.",
                                        "example": 2
                                    },
                                    "vaccinated": {
                                        "type": "boolean",
                                        "title": "vaccinated",
                                        "description": "Inform if the animal is vaccinated or not. \n\n `true` = vaccinated animal or `false` = unvaccinated animal.",
                                        "example": true
                                    }
                                }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "deprecated": false
            }
        }
    },
    "security": [
        {
            "appKey": [],
            "appToken": []
        }
    ],
    "components": {
        "securitySchemes": {
            "appKey": {
                "type": "apiKey",
                "in": "header",
                "name": "X-VTEX-API-AppKey"
            },
            "appToken": {
                "type": "apiKey",
                "in": "header",
                "name": "X-VTEX-API-AppToken"
            }
        },
        "schemas": {
            "Pet": {
                "type": "object",
                "properties": {
                    "color": {
                        "type": "string",
                        "title": "color",
                        "description": "Animal color.",
                        "example": "Brown"
                    },
                    "breed": {
                        "type": "string",
                        "title": "breed",
                        "description": "Animal breed.",
                        "example": "Golden retriever"
                    },
                    "carry": {
                        "type": "string",
                        "title": "carry",
                        "description": "Animal carry.",
                        "example": "Large"
                    },
                    "age": {
                        "type": "integer",
                        "title": "age",
                        "description": "Animal age.",
                        "example": 2
                    },
                    "vaccinated": {
                        "type": "boolean",
                        "title": "color",
                        "description": "Inform if the animal is vaccinated or not. \n\n `true` = vaccinated animal or `false` = unvaccinated animal.",
                        "example": true
                    }
                }
            },
            "Pets": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/Pet"
                },
                "example": [
                    {
                        "color": "Brown",
                        "breed": "Golden retriever",
                        "carry": "Large",
                        "age": 2,
                        "vaccinated": true
                    },
                    {
                        "color": "Black",
                        "breed": "Shar Pei",
                        "carry": "Midsize",
                        "age": 1,
                        "vaccinated": "FALSE"
                    },
                    {
                        "color": "Tricolor (black, white and brown)",
                        "breed": "Brazilian terrier",
                        "carry": "Small size",
                        "age": 2,
                        "vaccinated": "TRUE"
                    }
                ]
            }
        }
    }
}